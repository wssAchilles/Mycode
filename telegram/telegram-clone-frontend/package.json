{
  "name": "telegram-clone-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check:budgets": "node scripts/check-budgets.mjs",
    "check:wasm-artifacts": "node scripts/check-wasm-artifacts.mjs",
    "check:runtime-flags": "node scripts/check-runtime-flags.mjs",
    "check:rollout-policy": "node scripts/check-rollout-policy.mjs",
    "check:cursor-downline": "node scripts/check-legacy-message-paths.mjs",
    "check:socket-boundary": "node scripts/check-socket-boundary.mjs",
    "check:realtime-protocol": "node scripts/check-realtime-protocol.mjs",
    "check:runtime-dashboard": "node scripts/check-chat-runtime-dashboard.mjs",
    "check:chat-history-budget": "node scripts/check-chat-history-budget.mjs",
    "check:ui-contract": "node scripts/check-chat-ui-contract.mjs",
    "check:ui-guards": "npm run check:ui-contract && npm run check:chat-history-budget && vitest run src/test/chatStoreMetaBatch.test.ts src/test/messageStoreWorkerFirst.test.ts",
    "check:worker-first": "vitest run src/test/messageStoreWorkerFirst.test.ts src/test/chatCoreStore.test.ts",
    "perf:e2e:install": "playwright install chromium",
    "perf:e2e:chat": "playwright test perf/playwright/chat-perf.spec.ts",
    "perf:e2e:ui-guard": "playwright test perf/playwright/chat-ui-guard.spec.ts",
    "perf:e2e:assert": "node scripts/assert-chat-perf-report.mjs",
    "perf:e2e:chat:multi": "node scripts/run-chat-perf-multi.mjs",
    "perf:e2e:assert:multi": "node scripts/assert-chat-perf-multi-report.mjs",
    "perf:e2e:assert:trend": "node scripts/assert-chat-perf-trend.mjs",
    "perf:ci": "npm run build && npm run check:budgets && npm run check:runtime-flags && npm run check:rollout-policy && npm run check:wasm-artifacts",
    "quality:ci": "npm run perf:ci && npm run check:cursor-downline && npm run check:socket-boundary && npm run check:realtime-protocol && npm run check:runtime-dashboard && npm run check:worker-first && npm run check:ui-guards",
    "quality:perf:e2e": "npm run perf:e2e:chat:multi && npm run perf:e2e:assert:multi && npm run perf:e2e:assert:trend && npm run perf:e2e:ui-guard",
    "lint": "eslint .",
    "preview": "vite preview",
    "wasm:build": "cd src/core/wasm/chat_wasm && wasm-pack build --release --target web --out-dir pkg --out-name chat_wasm",
    "wasm:dev": "cd src/core/wasm/chat_wasm && wasm-pack build --dev --target web --out-dir pkg --out-name chat_wasm",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "axios": "^1.11.0",
    "comlink": "^4.4.2",
    "dexie": "^4.3.0",
    "framer-motion": "^12.29.2",
    "idb-keyval": "^6.2.2",
    "immer": "^11.1.3",
    "lucide-react": "^0.468.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^7.7.1",
    "recharts": "^3.7.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.8.1",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1",
    "web-vitals": "^4.2.4",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-pwa": "^1.2.0",
    "workbox-build": "^7.4.0",
    "workbox-window": "^7.4.0",
    "vitest": "^4.0.17"
  }
}
