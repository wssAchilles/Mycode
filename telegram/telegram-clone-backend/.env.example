# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration (Atlas SRV 示例)
# 请在 MongoDB Atlas 中创建数据库用户并将当前IP加入网络访问白名单
# 将 <username>、<password>、<cluster>、<appName> 替换为你的实际值
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/telegram_clone?retryWrites=true&w=majority&appName=<appName>

# MongoDB 连接调优（可选）
# 如遇到企业网络/代理/TLS检视导致的握手或超时问题，可适当增大超时并启用自动重连间隔
# 单位均为毫秒
MONGODB_SERVER_SELECTION_TIMEOUT_MS=30000
MONGODB_SOCKET_TIMEOUT_MS=20000
MONGODB_CONNECT_TIMEOUT_MS=30000
MONGODB_MAX_POOL_SIZE=10
MONGODB_RECONNECT_DELAY_MS=10000

# MongoDB 可选兼容开关（仅在需要时启用）
# 在企业网络存在 TLS 检视或代理时，可能出现 ECONNRESET/TLS 握手异常，可临时启用以排障
# 仅建议开发/测试环境使用，生产环境请保持为 false
MONGODB_TLS_ALLOW_INVALID_CERTIFICATES=false

# 当连接本地 MongoDB 或直连单节点（非副本集/SRV）时可启用
MONGODB_DIRECT_CONNECTION=false

# 本地 MongoDB 直连示例（需自行取消注释并替换实际端口/库名）
# MONGODB_URI=mongodb://127.0.0.1:27017/telegram_clone?directConnection=true
# 若配合上方开关排障（谨慎）：
# MONGODB_TLS_ALLOW_INVALID_CERTIFICATES=true

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USERNAME=postgres
PG_PASSWORD=your_password
PG_DATABASE=telegram_clone

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your_super_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Google Gemini API 配置
GEMINI_API_KEY=your_gemini_api_key

# Azure AI Foundry 配置 (已切换，暂时注释掉)
# AZURE_AI_ENDPOINT=https://your-resource-name.services.ai.azure.com
# AZURE_API_KEY=your_azure_api_key

# 项目和模型配置
# AZURE_PROJECT_NAME=your_project_name
# AZURE_DEPLOYMENT_NAME=gpt-35-turbo
# AZURE_API_VERSION=2023-09-01-preview

# AI Socket 配置
# 是否启用 AI Socket.IO 服务器（默认启用）。如已独立运行 ai-socket-server.js，请设置为 false 以避免端口冲突。
AI_SOCKET_ENABLED=true
# AI Socket.IO 服务器端口（默认 5850）。需与前端 `aiSocketService` 中的连接端口一致。
AI_SOCKET_PORT=5850

