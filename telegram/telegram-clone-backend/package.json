{
  "name": "telegram-clone-backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --dns-result-order=ipv4first dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "npm install --include=dev && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "migrate:messages": "ts-node src/scripts/migrateMessagesChatFields.ts",
    "seed:clusters": "ts-node src/scripts/seedClusters.ts",
    "seed:all": "ts-node src/scripts/seedAllData.ts",
    "clear:data": "ts-node src/scripts/clearRecommendationData.ts",
    "job:simclusters": "ts-node src/scripts/triggerJobs.ts --job simclusters",
    "job:realgraph": "ts-node src/scripts/triggerJobs.ts --job realgraph",
    "job:backfill-timelines": "ts-node src/scripts/backfillAuthorTimelines.ts --days 7"
  },
  "keywords": [
    "telegram",
    "clone",
    "chat",
    "backend",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "description": "Backend for Telegram clone chat application",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.981.0",
    "@privacyresearch/libsignal-protocol-typescript": "^0.0.16",
    "@sentry/node": "^8.37.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/express": "^4.17.0",
    "@types/iconv-lite": "^0.0.1",
    "@types/multer": "^2.0.0",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.66.5",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "https-proxy-agent": "^7.0.6",
    "iconv-lite": "^0.6.3",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.5",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^11.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/node-cron": "^3.0.11",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  }
}
